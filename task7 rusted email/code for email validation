extern crate regex;
use regex::Regex;
fn main()
    {
        use std::io::{stdin,stdout,Write}
        let mut mail=string::new();
        print!("Enter the email: ");
        let_=stdout().flush();
        stdin().read_line(&mut mail).expend
        if Regex::new(r"^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$").unwrap().is_match(&mut mail)==true
        {
            println!("Valid email id");
        }
        else
        {
            println!("Invalid email id");
        }
        
     }
     
